{
    "name": "re-space-service",
    "version": "1.0.0",
    "description": "Re-space service",
    "main": "index.js",
    "scripts": {
        "build": "rm -rf dist && tsc",
        "lint": "eslint --ignore-path .eslintignore --ext .ts,.js .",
        "lint:fix": "eslint --ignore-path .eslintignore --ext .ts,.js --fix .",
        "migration:create": "ts-node ./node_modules/typeorm/cli.js --config src/ormconfig.ts migration:create",
        "migration:generate": "ts-node ./node_modules/typeorm/cli.js --config src/ormconfig.ts migration:generate",
        "migration:run": "ts-node ./node_modules/typeorm/cli.js --config src/ormconfig.ts migration:run",
        "migration:revert": "ts-node ./node_modules/typeorm/cli.js --config src/ormconfig.ts migration:revert",
        "start": "tsc && node dist/app.js",
        "start:dev": "ts-node src/index.ts",
        "test": "cross-env NODE_ENV=test jest --verbose --runInBand",
        "test:dockest": "cross-env NODE_ENV=test ts-node ./dockest.ts"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,js,json}": [
            "prettier --write"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/pandyaka/re-space-service.git"
    },
    "author": "chicken-little",
    "license": "UNLICENSED",
    "bugs": {
        "url": "https://github.com/pandyaka/re-space-service/issues"
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "!src/**/index.ts",
            "!src/routes.ts",
            "src/**/*.ts"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "dist/"
        ],
        "globalSetup": "./jest-global-setup.js",
        "moduleFileExtensions": [
            "ts",
            "js",
            "json",
            "jsx",
            "tsx"
        ],
        "moduleDirectories": [
            "node_modules"
        ],
        "moduleNameMapper": {
            "^(((entities)|(services)|(controllers)|(middlewares)|(repositories)|(util))/(.*))": "<rootDir>/src/$0"
        },
        "setupFilesAfterEnv": [
            "jest-extended"
        ],
        "testMatch": [
            "**/tests/**/*.test.ts"
        ],
        "testEnvironment": "node",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "verbose": true
    },
    "homepage": "https://github.com/pandyaka/re-space-service#readme",
    "devDependencies": {
        "@types/express": "^4.17.7",
        "@types/jest": "^26.0.10",
        "@types/node": "^14.0.27",
        "@types/pg": "^7.14.4",
        "@typescript-eslint/eslint-plugin": "^3.9.0",
        "@typescript-eslint/parser": "^3.9.0",
        "cross-env": "^7.0.2",
        "dockest": "^2.0.2",
        "eslint": "^7.6.0",
        "eslint-config-airbnb-typescript": "^9.0.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-filenames": "^1.3.2",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jest": "^23.20.0",
        "eslint-plugin-prettier": "^3.1.4",
        "fishery": "^1.0.1",
        "husky": "^4.2.5",
        "jest": "^26.4.0",
        "jest-extended": "^0.11.5",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5",
        "ts-jest": "^26.2.0",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.7",
        "uuid": "^8.3.0"
    },
    "dependencies": {
        "@types/jsonwebtoken": "^8.5.0",
        "body-parser": "^1.19.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "pg": "^8.3.0",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.2.25"
    }
}
